<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Luqmit3ish.Views.FoodDetailPage"
             x:Name='FoodDetails'
             Title="Food Detail"
             Shell.TabBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">
    <ContentPage.Content>
        <Grid RowDefinitions="0.4*,0.6*" Margin="0">
            <Image Grid.Row="0" Source="{Binding Dish[0].photo}"  Aspect="AspectFill"/>
            <Frame  Grid.Row="1" HorizontalOptions="Fill" VerticalOptions="Fill"  Margin="0,-40,0,-40"  CornerRadius="30" HasShadow="True" BackgroundColor="{AppThemeBinding Dark={StaticResource BackgroundDark}}">
                <StackLayout Margin="10" HorizontalOptions="Fill" Spacing="15" Padding="20">
                    <Label Text="{Binding  Dish[0].restaurantName}" FontAttributes="Bold" FontSize="Medium" TextColor="{AppThemeBinding Light={StaticResource TextColorLight}, Dark={StaticResource TextColorDark}}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ProfileCommand}" CommandParameter="{Binding Dish[0].restaurantId}"  />
                        </Label.GestureRecognizers>
                    </Label>
                    <Label FontSize="16" TextColor="{AppThemeBinding Light={StaticResource TextColorLight}, Dark={StaticResource TextColorDark}}" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Pick-up time: " />
                                <Span Text="{Binding Dish[0].pickUpTime}" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label FontSize="16" TextColor="{AppThemeBinding Light={StaticResource TextColorLight}, Dark={StaticResource TextColorDark}}" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Keep Listed for: " />
                                <Span Text="{Binding Dish[0].keepValid}" />
                                <Span Text=" Days" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label VerticalOptions="Center" >
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="Available quantity: " TextColor="{AppThemeBinding Light={StaticResource TextColorLight}, Dark={StaticResource TextColorDark}}" FontSize="16"/>
                                <Span Text="{Binding Dish[0].quantity}" TextColor="{StaticResource PrimaryLight}" TextDecorations="Underline" FontAttributes="Bold" FontSize="20"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Frame BackgroundColor="{AppThemeBinding Light={StaticResource FrameBackGroundLight},Dark={StaticResource FrameBackGroundDark}}" BorderColor="LightGray" CornerRadius="10" HeightRequest="50" >
                        <Label VerticalOptions="Start" TextColor="{AppThemeBinding Light={StaticResource TextColorLight}, Dark={StaticResource TextColorDark}}">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Description: " />
                                    <Span Text="{Binding Dish[0].description}"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </Frame>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0" Orientation="Horizontal" HorizontalOptions="Center" >
                            <Label Text="&#xf055;" FontFamily="FontAwesomeIcons" FontSize="28" Margin="0,10,0,0" TextColor="{AppThemeBinding Light={StaticResource TextColorLight}, Dark={StaticResource PrimaryLight}}" >
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding Dish[0].quantity}" Command="{Binding PlusCommand}"/>
                                </Label.GestureRecognizers>
                            </Label>
                            <Label Text="{Binding Counter}" FontAttributes="Bold" Margin="3,10,3,0" FontSize="Medium" TextColor="{AppThemeBinding Light={StaticResource TextColorLight}, Dark={StaticResource TextColorDark}}"/>
                            <Label Text="&#xf056;" FontFamily="FontAwesomeIcons" FontSize="28" VerticalOptions="Center" Margin="0,10,0,0" TextColor="{AppThemeBinding Light={StaticResource TextColorLight}, Dark={StaticResource PrimaryLight}}">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding MinusCommand}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </StackLayout>
                        <StackLayout  Grid.Column="1">
                            <Button CommandParameter="{Binding Dish[0].id}" Command="{Binding ReserveCommand}" TextColor="{StaticResource PrimaryLight}" Text="Reserve" Margin="10,0,0,0" HeightRequest="40" BackgroundColor="Transparent" FontAttributes="Bold" IsVisible="{Binding IsEnabled}" />
                        </StackLayout>

                    </Grid>

                </StackLayout>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>