<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Luqmit3ish.Views.ProfilePage"
             xmlns:vm="clr-namespace:Luqmit3ish.ViewModels"
             x:DataType="vm:ProfileViewModel"
             Shell.NavBarIsVisible="True"
             Title="Profile"
             BackgroundColor="#FCF5EF">

    <ContentPage.Content >
           <StackLayout Margin="0,40,0,0" >
               <Grid ColumnDefinitions=",,*">
                   <Frame WidthRequest="130" HeightRequest="130" HorizontalOptions="Center" CornerRadius="200" Padding="0" Grid.Column="1">
                        <Image Source="{Binding Photo}" Aspect="Fill"/>
                    </Frame>
                   <Frame Grid.Column="1" Padding="0" CornerRadius="50" BackgroundColor="{StaticResource PrimaryLight}" WidthRequest="30" HeightRequest="30" VerticalOptions="Center" HorizontalOptions="End" Margin="0,0,-5,-60">
                        <Label Text="&#xf303;"  FontFamily="FontAwesomeIcons" FontSize="Small" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center">
                            <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding EditPhotoClicked}" />
                            </Label.GestureRecognizers>

                        </Label>
                   </Frame>

               </Grid>
                
            <Label Text="{Binding ConstName}" HorizontalOptions="Center" TextColor="{StaticResource PrimaryLight}" FontSize="Title" FontAttributes="Bold"/>
            <Label Text="{Binding Email}" HorizontalOptions="Center" TextColor="Black" FontSize="Small" Margin="0,-5,0,0"/>
               <Frame Padding="0" Margin="0" BackgroundColor="White" VerticalOptions="FillAndExpand">



                <StackLayout Margin="0" BackgroundColor="White" Padding="30">
                    <StackLayout>
                            <Label Text="Name" TextColor="{StaticResource PrimaryLight}" FontSize="Medium" FontAttributes="Bold"/>
                        <StackLayout Orientation="Horizontal" >
                            <Label TextColor="Black" Text="&#xf007;"  FontFamily="FontAwesomeIcons" FontSize="20" Margin="0,2,0,0" VerticalOptions="Center"/>
                        <Entry Text="{Binding Name}" TextColor="Black" FontSize="Medium" VerticalOptions="Center" HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </StackLayout>
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill" Margin="0,-5,0,0"/>

                    <StackLayout>
                            <Label Text="Phone" TextColor="{StaticResource PrimaryLight}" FontSize="Medium" FontAttributes="Bold"/>
                        <StackLayout Orientation="Horizontal">
                            <Label TextColor="Black" Text="&#xf095;"  FontFamily="FontAwesomeIcons" FontSize="20" Margin="0,2,0,0" VerticalOptions="Center"/>
                        <Entry Text="{Binding Phone}" TextColor="Black" FontSize="Medium" VerticalOptions="Center"  HorizontalOptions="FillAndExpand"/>

                        </StackLayout>
                    </StackLayout>
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill" Margin="0,-5,0,0"/>

                    <StackLayout>
                            <Label Text="Location" TextColor="{StaticResource PrimaryLight}" FontSize="Medium" FontAttributes="Bold"/>
                        <StackLayout Orientation="Horizontal">
                            <Label TextColor="Black" Text="&#xf3c5;"  FontFamily="FontAwesomeIcons" FontSize="20" Margin="0,2,0,0" VerticalOptions="Center"/>

                        <Entry Text="{Binding Location}" TextColor="Black" FontSize="Medium" VerticalOptions="Center"  HorizontalOptions="FillAndExpand"/>
                        </StackLayout>
                    </StackLayout>
                    <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill" Margin="0,-5,0,0"/>

                    <Label  Margin="15,0" Text="{Binding ErrorMessage}" IsVisible="{Binding ErrorVisible}" TextColor="Red"></Label>

                
                    <Grid ColumnDefinitions="," Padding="10">
                        <Button VerticalOptions="Center" BackgroundColor="{StaticResource PrimaryLight}" Text="Save" Command="{Binding DoneCommand}" Style="{StaticResource BorderButton}" HorizontalOptions="Fill"/>
                        <Button VerticalOptions="Center" BackgroundColor="Gray" Text="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource BorderButton}" Grid.Column="1" HorizontalOptions="Fill"/>
                    </Grid>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    
                    </StackLayout>
                </StackLayout>
                               </Frame>
            </StackLayout>

    </ContentPage.Content>
</ContentPage>
