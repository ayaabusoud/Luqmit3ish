<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Luqmit3ish.Views.CharityOrderPage"
             xmlns:vm="clr-namespace:Luqmit3ish.ViewModels"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             x:Name="CharityOrder"
             Title="Orders">



    <ContentPage.Content>
        <ScrollView BackgroundColor="#EDF2F5" >
            <StackLayout  Margin="20,35,20,20">
                <CollectionView 
                                    Margin="25" 
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    SelectionMode="None"
                                    ItemsSource="{Binding OrderCard}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" 
                                               ItemSpacing="20"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>

                            <pv:PancakeView  BackgroundColor="White" VerticalOptions="StartAndExpand"
                                            HorizontalOptions="FillAndExpand">
                                <Grid VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <BoxView BackgroundColor="#4D6BA3"
                                             WidthRequest="3"
                                             HorizontalOptions="Start"
                                             VerticalOptions="FillAndExpand"/>
                                    <xct:Expander Grid.Column="1">
                                        <xct:Expander.Header >
                                            <Grid HorizontalOptions="FillAndExpand" Margin="0,15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="3.5*"/>
                                                </Grid.ColumnDefinitions>
                                                <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Image HeightRequest="50" Source="{Binding photo}" />
                                                </StackLayout>
                                                <BoxView Grid.Column="1" BackgroundColor="#F2F4F8" WidthRequest="1" HorizontalOptions="Start" 
                                                 VerticalOptions="FillAndExpand"/>
                                                <Grid Grid.Column="2" Margin="15">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0.85*"/>
                                                        <ColumnDefinition Width="0.15*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Grid.Column="0" Text="{Binding name}" TextColor="Black" FontSize="Medium"/>
                                                   
                                                    <Label Grid.Column="2" Text="&#xf1f8;" FontFamily="FontAwesomeIcons" Margin="0,2,0,0" FontSize="20" >
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding BindingContext.DeleteCommand , Source={x:Reference CharityOrder}}"
                                                                                  CommandParameter="{Binding id}"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                </Grid>
                                            </Grid>
                                        </xct:Expander.Header >
                                        <CollectionView ItemsSource="{Binding data}" >
                                                <CollectionView.ItemTemplate >
                                                    <DataTemplate>
                                                    <Grid HorizontalOptions="FillAndExpand">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="3.5*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <BoxView Grid.Column="1" BackgroundColor="#F2F4F8" WidthRequest="1" HorizontalOptions="Start" 
                                                      VerticalOptions="FillAndExpand"/>
                                                        <StackLayout Grid.Column="2" Spacing="10" Orientation="Horizontal">

                                                            <Label TextColor="#2F3246" FontSize="Small"  Margin="15,0">
                                                                <Label.FormattedText>
                                                                    <FormattedString>
                                                                        <FormattedString.Spans>
                                                                            <Span Text="{Binding dishName}"/>
                                                                            <Span Text=": "/>
                                                                            <Span Text="{Binding number_of_dish}"  />
                                                                        </FormattedString.Spans>
                                                                    </FormattedString>
                                                                </Label.FormattedText>
                                                            </Label>
                                                         
                                                                <Label Text="&#xf055;" FontFamily="FontAwesomeIcons" FontSize="18" Margin="5,2,5,0" >
                                                                <Label.GestureRecognizers>
                                                                        <TapGestureRecognizer CommandParameter="{Binding id}" Command="{Binding BindingContext.PlusCommand , Source={x:Reference CharityOrder}}" />
                                                                    </Label.GestureRecognizers>
                                                                </Label>
                                                            <Label  Text="&#xf056;" FontFamily="FontAwesomeIcons" FontSize="18" Margin="5,2,5,0" >
                                                                <Label.GestureRecognizers>
                                                                        <TapGestureRecognizer  CommandParameter="{Binding id}" Command="{Binding BindingContext.MinusCommand , Source={x:Reference CharityOrder}}" />
                                                                    </Label.GestureRecognizers>
                                                                </Label>
                                                          
                                                        </StackLayout>
                                                    </Grid>
                                                </DataTemplate>
                                                </CollectionView.ItemTemplate>
                                            </CollectionView>
                                           
                                    </xct:Expander>

                                </Grid>

                            </pv:PancakeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>

